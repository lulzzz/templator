<?xml version="1.0" encoding="UTF-8"?>
<Template IsDebug="true">
    <PageSettings Format="A4" Orientation="Portrait" Margin="25" />
    <PageHeader>
        <Column>
            <Label Text = "Invoice" Align="Center" />
            <Image Src="logo.png" Width="85" Height="30"  />
        </Column>
    </PageHeader>
    <ReportBody>
        <Column>
            <Field Label="Invoice No" DataField="No" />
            <Field Label="Created" DataField="Created" />
            <Field Label="Customer" DataField="CustomerName" />
            <Line />
            <Iterator ItemReferenceName="i" DataField="Items">
                <Row>
                    <Field Label="" DataField="i.PosNo" />
                    <Field Label="" DataField="i.ArticleId" />
                    <Field Label="" DataField="i.ArticleDescription" />
                    <Field Label="" DataField="i.UoM" />
                    <Field Label="" DataField="i.Quantity" />
                    <Field Label="" DataField="i.TaxId" />
                    <Field Label="" DataField="i.NetAmount" />
                    <Field Label="" DataField="i.TaxAmount" />
                    <Field Label="" DataField="i.TAmount" />
                </Row>
                <line />
            </Iterator>
            <line />
            <Field DataField="TotalAmount" />
            <Field DataField="TotalNetAmount" />
        </Column>
    </ReportBody>
</Template>